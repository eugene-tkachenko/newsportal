<div class="blog-post">
  <% @articles.each do |r| %>
      <h1><%= r.title %>
      </h1>
      <h4><%= r.categories.map { |category| "#{category.name}" }.join(" & ") %></h4>
      <%= image_tag image_path("1.jpg"), class: "img-thumbnail img-responsive img-set" %>
      <div class="blog-info">
        Posted on <strong><%= r.created_at.strftime("%dh %B %Y") %> </strong>by
        <strong><a href="#">Romilx Chanqui</a></strong>
      </div>
      <div class="text-div">
        <%= truncate(r.content.html_safe, length: 450) %>
      </div>
      <hr/>
      <a class="btn btn-rm btn-lg" href="single.html">Read Full Story &nbsp; <i class="fa fa-angle-right"></i></a>
      <hr/>
      <div class="blog-share">
        <a href="#" class="btn btn-social"><i class="fa fa-facebook fa-2x"></i></a>
        <a href="#" class="btn btn-social"><i class="fa fa-twitter fa-2x"></i></a>

        <a href="#" class="btn btn-social"><i class="fa fa-google-plus fa-2x"></i></a>

        <a href="#" class="btn btn-social"><i class="fa fa-linkedin fa-2x"></i></a>

        <a href="#" class="btn btn-social"><i class="fa fa-pinterest fa-2x"></i></a>

        <a href="#" class="btn btn-social"><i class="fa fa-reddit fa-2x"></i></a>
      </div>
      </div>
      <hr/>
  <% end %>